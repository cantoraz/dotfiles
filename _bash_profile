# vim:ft=sh

#export LANG="en_US.UTF-8"

# if running bash
if [ -n "$BASH_VERSION" ]; then
  # include .bashrc if it exists
  if [ -f "$HOME/.bashrc" ]; then
    . "$HOME/.bashrc"
  fi
fi

# Customized PATH
if [ -f "$HOME/.bash_path" ]; then
  . "$HOME/.bash_path"
fi

# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/bin" ]; then
  PATH="$HOME/bin:$PATH"
fi

export PATH
